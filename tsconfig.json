{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,   
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "shared/*": [
        "app/shared/*"
      ]
    }
  }
}
